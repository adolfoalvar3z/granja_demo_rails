<%= form_with(model: animal) do |form| %>
  <% if animal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>
      <ul>
        <% animal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1><%= @variable %></h1>
  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>
  <div>
    <%= form.label :farmer_id, style: "display: block" %>
    <select class="form-select form-select-lg" require name="animal[farmer_id]" id="animal[farmer_id]">
      <option selected>Selecciona un granjero</option>
      <% @farmers.each do |farmer|%>
        <option value="<%= farmer.id %>"><%= farmer.name %></option>
      <% end %>
    </select>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
